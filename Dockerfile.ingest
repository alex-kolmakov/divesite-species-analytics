FROM python:3.11-slim

COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

COPY requirements-ingest.txt .
RUN uv pip install --system --no-cache -r requirements-ingest.txt

COPY ingest/ ingest/

RUN useradd --create-home appuser
USER appuser

ENTRYPOINT ["python", "-m", "ingest"]
CMD ["--source", "all"]
