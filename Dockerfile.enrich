FROM python:3.11-slim

COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

COPY requirements-enrich.txt .
RUN uv pip install --system --no-cache -r requirements-enrich.txt

COPY enrich/ enrich/

RUN useradd --create-home appuser
USER appuser

ENTRYPOINT ["python", "-m", "enrich"]
